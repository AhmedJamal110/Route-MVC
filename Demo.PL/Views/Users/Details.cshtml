@model UserViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4 text-center">User Details</h1>

<div class="form-group">
    <label class="col-form-label">Id</label>
    <input class="form-control" asp-for="Id"  readonly />
</div>


<div class="form-group">
    <label class="col-form-label">First Name</label>
    <input class="form-control" asp-for="Fname" type="text" readonly />
</div>
<div class="form-group">
    <label class="col-form-label">Last Name</label>
    <input class="form-control" asp-for="LName" type="text" readonly />
</div>

<div class="form-group">
    <label class="col-form-label">Email</label>
    <input class="form-control" asp-for="Email" type="email" readonly />
</div>
<div class="form-group">
    <label class="col-form-label">Phone Number</label>
    <input class="form-control" asp-for="PhoneNumber" type="text" readonly />
</div>
<div class="form-group">
    <label class="col-form-label">Roles </label>
    <input class="form-control" asp-for="Roles" type="text" readonly />
</div>



<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-light" asp-action="Index">Back To List</a>


