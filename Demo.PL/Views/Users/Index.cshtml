@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}



<div class="d-flex justify-content-between align-items-center">

    <h1>All Users</h1>
    <a class="btn btn-primary" asp-action="Create">Add New User</a>

</div>


<div class="my-4  d-flex justify-content-center align-items-center">
    <form asp-action="Index" class="clo-8 row">
        <div class="col-8 ">
            <input type="text" name="SearchValue" placeholder="Search By Email" class="form-control" />
        </div>

        <div class="col-4">
            <button type="submit" value="Search" class="btn btn-outline-primary">Search</button>
        </div>






    </form>
</div>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Fname)</td>
                <td>@Html.DisplayNameFor(D => D.LName)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                <td>@Html.DisplayNameFor(D => D.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(D => D.Roles)</td>          
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Fname</td>
                    <td>@user.LName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Roles)</td>
          
                    <partial name="_ButtonPartialView" model="user.Id" />
                </tr>

            }

        </tbody>
    </table>
}
else
{
    <div class="text-danger mt-4">
        <h2 class="text-danger">There Are No Users Now</h2>
    </div>
}


