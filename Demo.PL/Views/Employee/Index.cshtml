@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}




<div class="d-flex justify-content-between align-items-center"> 

    <h1>All Empoyess</h1>
    <a class="btn btn-primary" asp-action="Create">Add New Employee</a>

</div>


<div class="my-4  d-flex justify-content-center align-items-center">
        <form asp-action="Index" class="clo-8 row">
            <div  class="col-8 ">
                <input type="text"  name="SearchValue" placeholder="Search By Name" class="form-control" />
            </div>
           
            <div class="col-4">
                <button type="submit" value="Search" class="btn btn-outline-primary" >Search</button>
            </div>



            

     
     </form>
    </div>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Age)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                <td>@Html.DisplayNameFor(D => D.Image)</td>
                <td>@Html.DisplayNameFor(D => D.Address)</td>
                <td>@Html.DisplayNameFor(D => D.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(D => D.Salaey)</td>
                <td>@Html.DisplayNameFor(D => D.HairDate)</td>
                <td>@Html.DisplayNameFor(D => D.department)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>

        <tbody>
            @foreach (var Emp in Model)
            {
                <tr>
                    <td>@Emp.Name</td>
                    <td>@Emp.Age</td>
                    <td>@Emp.Email</td>
                    <td>
                        <img src="~/fils/images/@Emp.ImageName" class="w-100" />
                    </td>
                    <td>@Emp.Address</td>
                    <td>@Emp.PhoneNumber</td>
                    <td>@Emp.Salaey</td>
                    <td>@Emp.HairDate</td>
                    <td>@Html.DisplayFor( D => Emp.department.Name)</td>
                    <partial name="_ButtonPartialView" model="Emp.Id.ToString()"  />
                </tr>

            }

        </tbody>
    </table>
}
else
{
    <div class="text-danger mt-4">
        <h2 class="text-danger">There Are No Employess</h2>
    </div>
}
