
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">

			

			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
		
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RemmberMe" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p class="mb-4"> Dont have an Account?? <a asp-action="Register"> Register Now!</a></p>

		<p><a asp-action="ForgetPassword">Forget Password</a></p>

	</div>
</div>



@section ValidationScript
{
	<partial name="_ValidationScriptsPartial" />

}



