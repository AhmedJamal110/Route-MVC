@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-danger mb-4">Are you sure to delete this department</h1>

    <form asp-action="Delete">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control type="text" readonly/>
        </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control type="text" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control type="Date" readonly />
    </div>
        <button class="btn btn-danger" asp-action="Delete" >Delete</button>
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </form>