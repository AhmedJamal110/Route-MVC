@model Department
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4" >Create New Department</h1>

<form asp-action="Create" >
       <div class="form-group">
           <lable class="col-form-label" >Code</lable> 
            <input class="form-control" type="text" asp-for="Code" />
            <span asp-validation-for="Code" class="text-danger"></span>
       </div>
       <div class="form-group">
           <label class="col-form-label">Name</label>
              <input  class="form-control" asp-for="Name" type="text"/>
              <span class="text-danger" asp-validation-for="Name"></span>
       </div>
    <div class="form-group">
        <label class="col-form-label">Date Of Creation</label>
        <input class="form-control" asp-for="DateOfCreation" type="date"/>
        <span class="text-danger" asp-validation-for="DateOfCreation"></span>
    </div>
    
    <input type="submit" value="submit" class="btn btn-primary" />
    <a class="btn btn-light" asp-action="Index">Back To List</a>
</form>


@section ValidationScript
{
    <partial name="_ValidationScriptsPartial" />

}
